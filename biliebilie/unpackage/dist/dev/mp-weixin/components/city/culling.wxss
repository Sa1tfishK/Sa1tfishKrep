.scroll-Y {
  height: 600px;
}
.novelcull {
  height: 300px;
  background-color: white;
  margin: 5px;
  padding: 5px;
}
.novelcull view {
  display: flex;
  justify-content: space-between;
}
.novelcull view view {
  display: flex;
  align-items: center;
}
.novelcull .scroll-Y1 {
  height: 250px;
}
.novelcull .scroll-Y1 .content {
  flex-flow: row wrap;
  margin: 0 10px;
  align-content: space-around;
  justify-content: space-around;
}
.novelcull .scroll-Y1 .content image {
  height: 100px;
  width: 80px;
  margin: 5px;
}
.novelcull .scroll-Y1 .content .book {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  width: 45%;
}
.novelcull .scroll-Y1 .content .book view {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 42%;
}
.novelcull .scroll-Y1 .content .book view .nameL {
  font-size: 15px;
}
.novelcull .scroll-Y1 .content .book view .autorL {
  font-size: 10px;
  color: slategray;
}
.novelcull .scroll-Y1 .content .book view .popularL {
  font-size: 10px;
  color: #ff5500;
}

