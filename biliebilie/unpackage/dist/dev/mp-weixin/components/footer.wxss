.footer {
  height: 10%;
  width: 100%;
  background-color: #f5f5f5;
  border-top: 1px #d4d4d4 solid;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}
.footer .icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}
.footer .btn {
  height: 80%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footer .btn label {
  font-size: 10px;
  position: relative;
  bottom: 15px;
}
.footer button::after {
  border: none;
}

