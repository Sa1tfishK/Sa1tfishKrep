.login {
  height: 750px;
  background-color: #f5f5f5;
}
.login .logtop {
  height: 40%;
  background-color: #323232;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 28%;
  border-bottom-right-radius: 28%;
}
.login .logtop image {
  height: 100px;
  width: 100px;
}
.login .logtop label {
  color: white;
}
.login .logbot {
  height: 40%;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.login .logbot  .uni-easyinput {
  height: 45px;
  width: 300px;
  flex: none;
}
.login .logbot view {
  display: flex;
  width: 100%;
}
.login .logbot view button {
  width: 35%;
}

