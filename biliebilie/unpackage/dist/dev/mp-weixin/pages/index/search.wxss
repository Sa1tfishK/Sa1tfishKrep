.search {
  background-color: #f5f5f5;
  width: 100%;
  height: 750px;
}
.search  .uni-navbar__header {
  padding-top: 35px;
}
.search  .uni-navbar__header-container {
  overflow: visible;
}
.search .input-view {
  display: flex;
  align-items: center;
}
.search .input-view  .uni-stat__select {
  margin-right: 15px;
}
.search .hotsea {
  height: 30%;
  margin-top: 5px;
  background-color: white;
  padding: 5px 10px;
}
.search .hotsea label {
  font-size: 14px;
  font-weight: 600;
  color: #535353;
}
.search .hotsea .hotkey {
  padding: 10px;
  height: 80%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.search .hotsea .hotkey view {
  width: 150px;
}
.search .hotsea .hotkey  .uni-tag {
  margin: 0 10px;
}
.search .seahistory {
  height: 50%;
  margin-top: 10px;
  background-color: white;
  padding: 5px 10px;
}
.search .seahistory .tag {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  height: 80%;
  padding: 5px 10px;
}
.search .seahistory .tag  .uni-tag {
  margin-right: 10px;
}
.search .seahistory .tag view {
  height: 25px;
  margin-bottom: 10px;
}
.search .seahistory .sea_top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}
.search .seahistory .sea_top label {
  font-size: 14px;
  font-weight: 600;
  color: #535353;
}
.search .seahistory .sea_top view {
  display: flex;
  align-items: center;
  color: slategray;
  font-size: 5px;
}
.search .result {
  height: 700px;
}
.search .result .resscr {
  height: 650px;
}
.search .result .resscr .resbook {
  margin: 6px 5px;
  background-color: white;
  display: flex;
}
.search .result .resscr .resbook view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0px 10px;
  width: 70%;
}
.search .result .resscr .resbook view  .uni-tag {
  width: -webkit-fit-content;
  width: fit-content;
  color: black;
}
.search .result .resscr .resbook view .bname {
  color: brown;
}
.search .result .resscr .resbook view .bauthor {
  font-size: 12px;
  color: #535353;
}
.search .result .resscr .resbook view .blurb {
  font-size: 10px;
  height: 33%;
  overflow: hidden;
  color: slategrey;
}
.search .result .resscr .resbook image {
  height: 140px;
  width: 100px;
}

