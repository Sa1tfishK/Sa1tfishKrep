.bookdetail {
  height: 100%;
  background-color: #f5f5f5;
}
.bookdetail .bdscroll {
  height: 710px;
}
.bookdetail .bdscroll .bdnav {
  height: 70px;
  width: 100%;
  padding-top: 20px;
  position: fixed;
  top: 0;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bookdetail .bdscroll .bdnav  .uni-icons {
  margin: 0 10px;
}
.bookdetail .bdscroll image {
  height: 70%;
  width: 100%;
}
.bookdetail .bdscroll view {
  display: flex;
  margin-bottom: 5px;
  background-color: white;
}
.bookdetail .bdscroll .v1 {
  height: 15%;
  align-items: center;
  justify-content: space-between;
}
.bookdetail .bdscroll .v1 view {
  display: flex;
  flex-direction: column;
  margin: 5px 10px;
  justify-content: center;
}
.bookdetail .bdscroll .v1 .v1right {
  display: flex;
  flex-direction: column;
  margin: 5px 10px;
  justify-content: center;
  align-items: center;
  width: 30%;
}
.bookdetail .bdscroll .v2 {
  overflow: hidden;
  font-size: 10px;
  color: #939393;
  padding: 5px;
}
.bookdetail .bdscroll .v3 {
  padding: 10px;
  align-items: center;
  height: 5%;
  justify-content: space-between;
}
.bookdetail .bdscroll .v3 label {
  color: #303030;
}
.bookdetail .bdscroll .v4 {
  flex-direction: column;
  height: 60%;
}
.bookdetail .bdscroll .v4 .v4top {
  display: flex;
  justify-content: space-between;
  width: 98%;
  margin: 5px;
  height: 10%;
  align-items: center;
  border-bottom: 1px #f5f5f5 solid;
}
.bookdetail .bdscroll .v4 .v4mid {
  height: 80%;
  flex-direction: column;
}
.bookdetail .bdscroll .v4 .v4mid .press {
  display: flex;
  height: 30%;
  margin: 5px;
  border-bottom: 1px #f5f5f5 solid;
}
.bookdetail .bdscroll .v4 .v4mid .press view {
  margin: 0 5px;
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bookdetail .bdscroll .v4 .v4mid .press image {
  height: 50px;
  width: 50px;
  border-radius: 50%;
}
.bookdetail .bdscroll .v4 .v4mid .nopress {
  display: flex;
  height: 90%;
  margin: 5px;
  border-bottom: 1px #f5f5f5 solid;
  justify-content: center;
  align-items: center;
}
.bookdetail .bdscroll .v4 button::after {
  border: none;
}
.bookdetail .bdscroll .v4 button {
  background-color: white;
  font-size: 14px;
  color: #6b6b6b;
}
.bookdetail .bdscroll .detailfooter {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bookdetail .bdscroll .detailfooter button {
  width: 50%;
  background-color: #f5f5f5;
  color: #10a2ed;
  font-weight: 100;
}
.bookdetail .bdscroll .detailfooter button:nth-child(2) {
  background-color: #10a2ed;
  color: white;
}
.bookdetail .bdscroll .detailfooter button::after {
  border: none;
}

